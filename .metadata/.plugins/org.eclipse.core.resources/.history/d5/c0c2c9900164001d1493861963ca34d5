package tema_4_prog_p2;

import java.util.Scanner;

public class Ej1 {
	public static void main(String[] arg) {
		Scanner teclado = new Scanner(System.in);
		String frase, letra;
		char letra1;
		int suma = 0;
		System.out.print("Inserta una frase: ");
		frase = teclado.next();
		System.out.print("Elige una letra: ");
		letra = teclado.next();
		letra1 = letra.charAt(0);

		for (int i = 0; i > frase.length(); i++) {
			frase.charAt(i);
			if (frase.charAt(i)==letra1) {
				suma++;
			}
		}
	}
}
